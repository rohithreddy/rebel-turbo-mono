{
  "name": "@barebel/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./middleware": "./src/middleware.ts",
    "./client": "./src/client.ts",
    "./env": "./env.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "pnpm generate:dev",
    "generate:dev": "dotenv -e ../../.env.development -- pnpx @better-auth/cli generate --config ../../auth.config.ts --output ../db/src/auth-schema.ts",
    "generate:prod": "dotenv -e ../../.env.prod -- pnpx @better-auth/cli generate --config ../../auth.config.ts --output ../db/src/auth-schema.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@barebel/db": "workspace:*",
    "@better-auth/expo": "1.3.27",
    "@t3-oss/env-nextjs": "^0.13.8",
    "better-auth": "1.3.27",
    "next": "^15.5.6",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@barebel/eslint-config": "workspace:*",
    "@barebel/prettier-config": "workspace:*",
    "@barebel/tsconfig": "workspace:*",
    "@better-auth/cli": "1.3.27",
    "@types/react": "catalog:react19",
    "dotenv-cli": "^10.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@barebel/prettier-config"
}
